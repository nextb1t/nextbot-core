{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "../dist",
    "typeRoots": [
        "./node_modules/@types"
    ],
    "types" : [ "node", "core-js" ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.json"
  ],
  "exclude": [
    "../test/**/*.test.ts",
    "../node_modules",
    "../dist",
    "typings"
  ]
}
