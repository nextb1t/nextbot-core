{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "alwaysStrict": true,
    "outDir": "dist",
    "typeRoots": [ "node_modules/@types" ],
    "types": [
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "examples/typescript"
  ],
  "exclude": [
    "test/**/*.test.ts",
    "examples/javascript",
    "node_modules"
  ]
}